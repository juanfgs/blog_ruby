<div class="well">
  <legend>Already have a user? Sign In</legend>
  <%= form_tag("/login", method: "post") do %>

  <div class="form-group">
    <label>Email</label>
    <%= text_field  :user,:email, class: 'form-control', placeholder: 'Enter your Email' %>

  </div>
  <div class="form-group">
    <label>Password</label>
    <%= password_field  :user,:password, class: 'form-control', placeholder: 'Enter your password' %>
  </div>

  <button class="btn btn-warning" type="submit">Sign in</button>
  <% end %>
  <%= link_to 'Sign in with Twitter', '/auth/twitter', class: 'btn btn-default' %>
</div>

        <!-- Introduction Row -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">About Us
                    <small>It's Nice to Meet You!</small>
                </h1>
                <p>This blog is written by these great people</p>
            </div>
        </div>

        <!-- Team Members Row -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Our Writers</h2>
            </div>
	    <% @users.each do |user|%>
            <div class="col-lg-4 col-sm-6 text-center">
	      <%= image_tag user.avatar.url(:medium), class:"img-circle center-block img-center img-responsive", id:"avatar" %>
	      
                <h3>
		  <%= link_to user.name,  user  %>

                </h3>
                <p><%= sanitize( truncate(user.summary, length: 150) ) %></p>
		<div class="social-box">
		  <% unless user.facebook.blank? %>
                  <a href="<%= user.facebook %>"><i  class="social fa fa-facebook-square fa-3x social-fb"></i></a>
		  <% end %>
		  <% unless user.twitter.blank?  %>
	          <a href="<%= user.twitter %>"><i class="social fa fa-twitter-square fa-3x social-tw"></i></a>
		  <% end%>
		</div>
            </div>
	    <% end %>

        </div>

        <hr>

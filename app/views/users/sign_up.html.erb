<div class="well">
  <legend>Wanna post your own articles? Sign up!</legend>
  <%= form_tag("/sign_up", method: "post") do %>
  <div class="form-group">
    <label>Full Name</label>
    <%= text_field  :user, :name, class: 'form-control', placeholder: 'Enter your Name' %>

  </div>
  <div class="form-group">
    <label>Email</label>
    <%= text_field  :user,:email, class: 'form-control', placeholder: 'Enter your Email' %>

  </div>
  <div class="form-group">
    <label>Password</label>
    <%= password_field  :user,:password, class: 'form-control', placeholder: 'Enter your password' %>

  </div>
  <div class="form-group">
    <label>Password Confirmation</label>
    <%= password_field :user,:password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>

  </div>
  <button class="btn btn-warning" type="submit">Sign up for WebApp</button>

<span>Already have a user? </span>  

  <%= link_to 'Sign in', '/login', class: 'btn btn-primary' %>       
  <% end %>
</div>
